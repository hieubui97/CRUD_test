@model CRUD.Models.Customer

@{
    Layout = null;
    ViewBag.Title = "InsertCustomer";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertCustomer</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div style="background-color:dodgerblue; color:white;text-align:center;line-height:50px;margin-bottom:40px;"> Add Customer</div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div style="color:Blue;font-family:Arial;text-align:right;">
                    @Html.ActionLink("List Customer", "ShowAllCustomerDetails")
                </div>
                <div style="color:Blue;font-family:Arial;text-align:right;">
                    @Html.ActionLink("Create Customer", "InsertCustomer")
                </div>
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <fieldset style="border-radius:5px;">
                            <legend style="font-family:Arial Black;color:Green;">Customer</legend>
                            <div class="form-group row">
                                <label class="control-label col-md-2">Name</label>
                                <div class="col-md-10">
                                    <div>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2">Address</label>
                                <div class="col-md-10">
                                    <div>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2">Phone</label>
                                <div class="col-md-10">
                                    <div>
                                        @Html.EditorFor(model => model.Mobileno, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.Mobileno, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2">Birthdate</label>
                                <div class="col-md-10">
                                    <div>
                                        @Html.EditorFor(model => model.Birthdate, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2">EmailID</label>
                                <div class="col-md-10">
                                    <div>
                                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="">
                                    <input type="submit" value="Insert" class="btn btn-success" />
                                    <input type="reset" value="Reset" class="btn btn-danger" />
                                </div>

                            </div>
                        </fieldset>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>

